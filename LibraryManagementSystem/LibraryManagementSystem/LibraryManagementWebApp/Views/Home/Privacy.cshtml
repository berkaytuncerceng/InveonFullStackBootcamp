@model LibraryManagementWebApp.Models.Book

<h1>Kitap Detayları</h1>
<dl class="row">
    <dt class="col-sm-2">Başlık</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Yazar</dt>
    <dd class="col-sm-10">@Model.Author</dd>

    <dt class="col-sm-2">Yayın Yılı</dt>
    <dd class="col-sm-10">@Model.PublicationYear</dd>

    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>

    <dt class="col-sm-2">Tür</dt>
    <dd class="col-sm-10">@Model.Genre</dd>

    <dt class="col-sm-2">Yayıncı</dt>
    <dd class="col-sm-10">@Model.Publisher</dd>

    <dt class="col-sm-2">Sayfa Sayısı</dt>
    <dd class="col-sm-10">@Model.PageCount</dd>

    <dt class="col-sm-2">Dil</dt>
    <dd class="col-sm-10">@Model.Language</dd>

    <dt class="col-sm-2">Özet</dt>
    <dd class="col-sm-10">@Model.Summary</dd>

    <dt class="col-sm-2">Mevcut Kopyalar</dt>
    <dd class="col-sm-10">@Model.AvailableCopies</dd>
</dl>
<a asp-action="Index" class="btn btn-primary">Geri</a>
